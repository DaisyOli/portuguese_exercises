<!-- Grupo de botões para adicionar conteúdo -->
<div class="card border-dark mb-4">
  <div class="card-header text-center">
    <h5 class="mb-0"><%= t('activities.add_content') || "Adicionar Conteúdo" %></h5>
  </div>
  <div class="card-body">
    <!-- Botões para adicionar diferentes tipos de conteúdo -->
    <div class="d-grid gap-3">
      <!-- Botão para adicionar enunciado -->
      <button
        class="btn btn-success btn-lg"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#new-statement-form"
        aria-expanded="false"
        aria-controls="new-statement-form">
        <i class="fas fa-file-alt me-2"></i>
        <%= t('activities.add_statement_btn') || "Adicionar Enunciado" %>
      </button>
      
      <!-- Botão para adicionar mídia -->
      <button
        class="btn btn-primary btn-lg"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#new-media-form"
        aria-expanded="false"
        aria-controls="new-media-form">
        <i class="fas fa-photo-video me-2"></i>
        <%= t('activities.add_media_btn') || "Adicionar Imagem ou Vídeo" %>
      </button>
      
      <!-- Botão para adicionar texto explicativo -->
      <button
        class="btn btn-info btn-lg text-white"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#new-text-form"
        aria-expanded="false"
        aria-controls="new-text-form">
        <i class="fas fa-align-left me-2"></i>
        <%= t('activities.add_text_btn') || "Adicionar Texto" %>
      </button>
      
      <!-- Botão para adicionar questão -->
      <button
        class="btn btn-warning btn-lg"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#new-question-form"
        aria-expanded="false"
        aria-controls="new-question-form">
        <i class="fas fa-question-circle me-2"></i>
        <%= t('activities.add_question_btn') || "Adicionar Nova Questão" %>
      </button>
    </div>
  </div>
</div> 