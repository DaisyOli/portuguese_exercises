<div class="container mt-5 mb-5">
  <div class="card shadow-lg p-4 w-100" style="max-width: 900px; margin: 0 auto;">
    <div class="card-body">
      <h1 class="text-center mb-4"><%= @activity.title %></h1>
      
      <div class="mb-4">
        <p><strong>Descrição:</strong> <%= @activity.description %></p>
        <p><strong>Nível:</strong> <span class="badge <%= @activity.level_color_class %>"><%= @activity.level %></span></p>
        <p><strong>Total de Questões:</strong> <%= @activity.questions.count %></p>
      </div>

      <% if current_user.teacher? %>
        <!-- Visualização do Professor -->
        <div id="questions-list" class="mb-4">
          <h3 class="mb-3 text-center">Questões</h3>
          <% if @activity.questions.any? %>
            <div class="list-group">
              <% @activity.questions.each_with_index do |question, index| %>
                <div class="list-group-item">
                  <div class="d-flex justify-content-between align-items-start">
                    <div>
                      <h5 class="mb-1">Questão <%= index + 1 %></h5>
                      <p class="mb-1"><%= question.content %></p>
                      <% if question.options.any? %>
                        <small class="text-muted">Opções:</small>
                        <ul class="mb-1">
                          <% question.options.each do |option| %>
                            <li><%= option %></li>
                          <% end %>
                        </ul>
                        <small class="text-success">Resposta correta: <%= question.correct_answer %></small>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="alert alert-warning">
              <p class="mb-0">Nenhuma questão foi adicionada a esta atividade ainda.</p>
            </div>
          <% end %>
        </div>

        <!-- Botões de Ação do Professor -->
        <div class="d-grid gap-2">
          <button type="button" class="btn btn-primary" data-bs-toggle="collapse" data-bs-target="#new-question-form">
            Adicionar Nova Questão
          </button>
          
          <div class="collapse" id="new-question-form">
            <div class="card card-body mt-3 mb-3">
              <%= render partial: "questions/form", locals: { question: @activity.questions.build, activity: @activity } %>
            </div>
          </div>

          <div class="btn-group w-100">
            <%= link_to "Editar Atividade", edit_activity_path(@activity), class: "btn btn-warning" %>
            <%= link_to "Excluir Atividade", 
                activity_path(@activity), 
                class: "btn btn-danger",
                data: {
                  turbo_method: :delete,
                  turbo_confirm: "Tem certeza que deseja excluir esta atividade?"
                } %>
          </div>
          
          <%= link_to "Resolver Quiz", resolve_quiz_activity_path(@activity), class: "btn btn-success mt-2" %>
        </div>
      <% else %>
        <!-- Visualização do Aluno -->
        <div class="d-grid gap-2">
          <%= link_to "Resolver Quiz", resolve_quiz_activity_path(@activity), class: "btn btn-success" %>
        </div>
      <% end %>

      <!-- Botão Voltar -->
      <div class="d-grid mt-4">
        <% if current_user.teacher? %>
          <%= link_to "Voltar ao Dashboard", teacher_dashboard_path, class: "btn btn-secondary" %>
        <% else %>
          <%= link_to "Voltar ao Dashboard", student_dashboard_path, class: "btn btn-secondary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
