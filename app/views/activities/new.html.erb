<div class="container mt-5 d-flex justify-content-center">
  <div class="card shadow-lg p-4" style="max-width: 800px; width: 100%;">
    <div class="card-body">
      <h1 class="text-center mb-4">New Activity</h1>

      <%= simple_form_for(@activity, html: { class: 'needs-validation' }) do |f| %>
        <!-- Campo de Título -->
        <div class="mb-3">
          <%= f.input :title, label: "Title", input_html: { class: "form-control" } %>
        </div>

        <!-- Campo de Descrição -->
        <div class="mb-3">
          <%= f.input :description, as: :text, label: "Description", input_html: { class: "form-control" } %>
        </div>

        <!-- Campo de Tipo de Conteúdo -->
        <div class="mb-3">
          <%= f.input :content_type, as: :select, collection: [["Video", "video"], ["Texto", "texto"], ["Áudio", "audio"]],
                      label: "Content Type", include_blank: "Select Type", input_html: { class: "form-select" } %>
        </div>

        <!-- Campo de Nível -->
        <div class="mb-3">
          <%= f.input :level, as: :select, collection: Activity::LEVELS, 
                      label: "Level", include_blank: "Select Level", input_html: { class: "form-select" } %>
        </div>

        <!-- Campo de URL de Conteúdo -->
        <div class="mb-3">
          <%= f.input :content_url, label: "Content URL", input_html: { class: "form-control", placeholder: "Enter a valid URL" } %>
        </div>

        <!-- Botão de Criar -->
        <div class="d-grid">
          <%= f.button :submit, "Create Activity", class: "btn btn-primary" %>
        </div>
      <% end %>

      <!-- Link para Voltar -->
      <div class="text-center mt-3">
        <%= link_to "Back to Activities", activities_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
