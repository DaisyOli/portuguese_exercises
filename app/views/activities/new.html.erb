<div class="container mt-5 d-flex justify-content-center">
  <div class="card shadow-lg p-4" style="max-width: 800px; width: 100%;">
    <div class="card-body">
      <h1 class="text-center mb-4">Nova Atividade</h1>

      <%= simple_form_for(@activity, html: { class: 'needs-validation' }) do |f| %>
        <!-- Campo de Título -->
        <div class="mb-3">
          <%= f.input :title, 
                      label: "Título", 
                      input_html: { class: "form-control" },
                      placeholder: "Digite o título da atividade",
                      error: 'O título é obrigatório' %>
        </div>

        <!-- Campo de Descrição -->
        <div class="mb-3">
          <%= f.input :description, 
                      as: :text, 
                      label: "Descrição", 
                      input_html: { class: "form-control", rows: 4 },
                      placeholder: "Descreva o objetivo desta atividade",
                      error: 'A descrição é obrigatória' %>
        </div>

        <!-- Campo de Nível -->
        <div class="mb-3">
          <%= f.input :level, 
                      as: :select, 
                      collection: [['A1', 'A1'], 
                                 ['A2', 'A2'], 
                                 ['B1', 'B1'],
                                 ['B2', 'B2'],
                                 ['C1', 'C1']],
                      label: "Nível", 
                      include_blank: "Selecione o nível",
                      input_html: { class: "form-select" },
                      error: 'O nível é obrigatório' %>
        </div>

        <!-- Botão de Criar -->
        <div class="d-grid">
          <%= f.button :submit, "Criar Atividade", class: "btn btn-primary" %>
        </div>
      <% end %>

      <!-- Link para Voltar -->
      <div class="text-center mt-3">
        <%= link_to "Voltar", activities_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
