<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Atividades</h1>
        <% if current_user.teacher? %>
          <%= link_to "Nova Atividade", new_activity_path, class: "btn btn-primary" %>
        <% end %>
      </div>

      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% @activities.each do |activity| %>
          <div class="col">
            <div class="card h-100 shadow-sm">
              <div class="card-body">
                <h5 class="card-title"><%= activity.title %></h5>
                <p class="card-text"><%= truncate(activity.description, length: 100) %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <span class="badge bg-info"><%= activity.level %></span>
                  <small class="text-muted"><%= activity.questions.count %> questões</small>
                </div>
              </div>
              <div class="card-footer bg-transparent border-top-0">
                <div class="d-flex flex-column gap-2">
                  <%= link_to "Ver Detalhes", activity_path(activity), class: "btn btn-outline-primary" %>
                  <% if current_user.teacher? && activity.teacher == current_user %>
                    <%= link_to "Editar", edit_activity_path(activity), class: "btn btn-outline-warning" %>
                    <%= link_to "Excluir", activity_path(activity), 
                        data: { 
                          turbo_method: :delete,
                          turbo_confirm: "Tem certeza que deseja excluir esta atividade?" 
                        }, 
                        class: "btn btn-outline-danger" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <% if @activities.empty? %>
        <div class="alert alert-info mt-4">
          <% if current_user.teacher? %>
            <p class="mb-0">Você ainda não tem atividades. Comece criando uma!</p>
          <% else %>
            <p class="mb-0">Não há atividades disponíveis no momento.</p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
