<div class="container mt-5">
  <h1>All Activities</h1>
  <% if @activities.any? %>
    <table class="table table-bordered mt-3">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Content Type</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @activities.each do |activity| %>
          <tr>
            <td><%= activity.title %></td>
            <td><%= truncate(activity.description, length: 50) %></td>
            <td><%= activity.content_type.capitalize %></td>
            <td>
              <%= link_to "View", activity_path(activity), class: "btn btn-info btn-sm" %>
              <% if current_user.role == "teacher" && activity.user == current_user %>
                <%= link_to "Edit", edit_activity_path(activity), class: "btn btn-warning btn-sm" %>
                <%= link_to "Delete", activity_path(activity), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-muted">No activities available at the moment.</p>
  <% end %>
</div>
