<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="card shadow-lg p-4 w-100" style="max-width: 1100px;">
    <div class="card-body">
      <!-- Cabeçalho do Dashboard -->
      <div class="text-center mb-4">
        <h1>Bem-vindo, Professor!</h1>
        <p>Este é seu painel de controle.</p>
        <%= link_to "Adicionar Nova Atividade", new_activity_path, class: "btn btn-primary btn-lg" %>
      </div>

      <!-- Lista de Atividades -->
      <div>
        <h2>Suas Atividades</h2>
        <% if Activity.where(teacher: current_user).any? %>
          <table class="table table-hover mt-3">
            <thead class="table-light">
              <tr>
                <th>Título</th>
                <th>Descrição</th>
                <th>Nível</th>
                <th>Questões</th>
                <th>Ações</th>
              </tr>
            </thead>
            <tbody>
              <% Activity.where(teacher: current_user).each do |activity| %>
                <tr>
                  <td><%= activity.title %></td>
                  <td><%= truncate(activity.description, length: 50) %></td>
                  <td><%= activity.level %></td>
                  <td><%= activity.questions.count %></td>
                  <td>
                    <div class="btn-group">
                      <%= link_to activity_path(activity), class: "btn btn-info btn-sm" do %>
                        <i class="fas fa-eye"></i> Ver
                      <% end %>
                      <%= link_to edit_activity_path(activity), class: "btn btn-warning btn-sm" do %>
                        <i class="fas fa-edit"></i> Editar
                      <% end %>
                      <%= link_to activity_path(activity), 
                          data: { 
                            turbo_method: :delete,
                            turbo_confirm: "Tem certeza que deseja excluir esta atividade?" 
                          }, 
                          class: "btn btn-danger btn-sm" do %>
                        <i class="fas fa-trash"></i> Excluir
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <div class="alert alert-info">
            <p class="mb-0">Você ainda não tem atividades. Comece criando uma usando o botão acima!</p>
          </div>
        <% end %>
      </div>

      <!-- Botão de Logout -->
      <div class="text-center mt-4">
        <%= button_to "Sair", destroy_user_session_path, method: :delete, class: "btn btn-danger", data: { turbo: false } %>
      </div>
    </div>
  </div>
</div>
