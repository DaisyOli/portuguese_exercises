<%= simple_form_for([@activity, @task], 
                    html: { 
                      id: "new_task_form", 
                      class: 'needs-validation',
                      data: { turbo: false }
                    }) do |f| %>
  <div class="mb-3">
    <%= f.input :description, label: "Task Description", as: :text, 
                input_html: { class: "form-control", rows: 3, placeholder: "Provide a brief description of the task" } %>
  </div>
  <div class="mb-3">
    <%= f.input :content, label: "Task Content", as: :text, 
                input_html: { class: "form-control", rows: 5, placeholder: "Example: 'I _____ (walk) to school every day.' Use underscores for blanks." } %>
  </div>
  <div class="mb-3">
    <%= f.input :correct_answers, label: "Correct Answers (comma-separated)", as: :text, 
                input_html: { class: "form-control", rows: 2, placeholder: "Answer1, Answer2, Answer3" } %>
  </div>
  <div class="d-grid">
    <%= f.button :submit, "Create Task", class: "btn btn-primary" %>
  </div>
<% end %>
