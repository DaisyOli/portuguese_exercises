<%= simple_form_for [activity, question], html: { data: { turbo: false } } do |qf| %>
  <div class="mb-3">
    <%= qf.input :content, 
                 label: t('questions.content'), 
                 input_html: { class: "form-control" },
                 placeholder: t('questions.content_placeholder'),
                 error: t('questions.content_required') %>
  </div>
  <div class="mb-3">
    <%= qf.input :options, 
                 label: t('questions.options'), 
                 input_html: { class: "form-control" },
                 placeholder: t('questions.options_placeholder'),
                 error: t('questions.options_required') %>
  </div>
  <div class="mb-3">
    <%= qf.input :correct_answer, 
                 label: t('questions.correct_answer'), 
                 input_html: { class: "form-control" },
                 placeholder: t('questions.correct_answer_placeholder'),
                 error: t('questions.correct_answer_required') %>
  </div>
  <div class="d-grid">
    <%= qf.submit t('questions.add'), class: "btn btn-success" %>
  </div>
<% end %>

