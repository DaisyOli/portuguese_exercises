<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-lg mt-5">
        <div class="card-body text-center p-5">
          <h1 class="display-5 mb-4"><%= t('welcome') %></h1>
          
          <% if !current_user %>
            <p class="lead mb-4"><%= t('home.login_prompt') %></p>
          <% else %>
            <p class="lead mb-4"><%= t('home.logged_in_as') %> <%= current_user.email %>.</p>
            
            <div class="d-flex flex-column align-items-center gap-3">
              <%= button_to t('auth.sign_out'), 
                  destroy_user_session_path, 
                  method: :delete, 
                  class: "btn btn-danger", 
                  data: { turbo: false } %>
              
              <% if current_user.teacher? %>
                <%= link_to t('home.go_to_teacher_dashboard'), 
                    teacher_dashboard_path, 
                    class: "btn btn-primary" %>
              <% else %>
                <%= link_to t('home.go_to_student_dashboard'), 
                    student_dashboard_path, 
                    class: "btn btn-primary" %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

