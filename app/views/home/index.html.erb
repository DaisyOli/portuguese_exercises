<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card shadow-lg p-4 text-center" style="width: 100%; max-width: 400px;">
    <div class="card-body">
      <h1 class="card-title">Welcome to the Exercise App!</h1>
      <p class="card-text">Please sign up or log in to continue.</p>

      <% if user_signed_in? %>
        <p>You are logged in as <strong><%= current_user.email %></strong>.</p>

        <!-- Botão de Log Out -->
        <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-danger"%> 
        
        <!-- Links para os Dashboards -->
        <% if current_user.role == "teacher" %>
          <%= link_to "Go to Teacher Dashboard", teacher_dashboard_path, class: "btn btn-primary mb-2" %>
        <% elsif current_user.role == "student" %>
          <%= link_to "Go to Student Dashboard", student_dashboard_path, class: "btn btn-primary mb-2" %>
        <% end %>
      <% else %>
        <!-- Formulário de Sign Up -->
        <h2 class="mt-3">Sign Up</h2>
        <%= render 'devise/registrations/new' %>
      <% end %>
    </div>
  </div>
</div>

